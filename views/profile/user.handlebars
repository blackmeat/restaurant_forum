<div class="container my-3">
  <div class="row" style="background-color: white;">
    <div class="col-4">
      <img src="{{User.image}}" alt="大頭貼" class="rounded-circle" width="300px" height="300px">
    </div>
    <div class="col-8">
      <ul class="list-unstyled">
        <li class="my-2"><strong>{{User.name}}</strong></li>
        <li>{{User.email}}</li>
        {{#ifCond User.id user.id}}
        <li class="my-3">
          <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
        </li>
        {{/ifCond}}
      </ul>
    </div>
  </div>
</div>